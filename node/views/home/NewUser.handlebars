<h1>{{welcome}}</h1>


    <legend>{{signup}}</legend>
    <form accept-charset="UTF-8" action="./create_user/" method="post">
        <div class="form-group">
            <label for="name">{{fullname}}</label>
		    <input class="form-control" name="name" placeholder="{{fullname}}" value="{{formData.name}}" type="text"> 
        </div>
        
        <div class="form-group"></div>
            <label for="email">{{email}}</label>
            <input class="form-control" name="email" placeholder="{{email}}" type="email" value="{{formData.email}}">
        </div>
        <div class="form-group"></div>
            <label for="language">{{language}}</label>
            <select name="language" data-val="{{formData.language}}" class="form-control">
                <option value="pt_BR" >Português (Brasil)</option>
                <option value="en" selected>English</option>
                <option value="es">Español</option>
                <option value="fr">Français</option>
                <option value="it">Italiano</option>
            </select>
        </div>    
        <button class="btn btn-primary" type="submit">{{ok}}</button>
    </form>
